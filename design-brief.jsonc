              "style": {
                "aspectRatio": "1.586 (standard card ratio)",
                "borderRadius": "xl",
                "bgGradient": "from cardGradientFrom via cardGradientVia to cardGradientTo — a dark greenish metallic gradient",
                "padding": "1.25rem",
                "maxWidth": "18rem"
              },
              "elements": [
                { "position": "top-left",     "content": "VISA logo — white italic bold text" },
                { "position": "center",        "content": "Card number: 3455 4562 7710 3507 — mono font, text-white, tracking-widest, body size" },
