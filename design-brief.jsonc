          {
            "type": "filter-chip",
            "icon": "settings-sliders (left)",
            "label": "Processed Date",
            "variant": "outline",
            "note": "Appears twice in the screenshot — could be two different date filters (start/end) or a duplicate in the mockup."
          },
          {
            "type": "filter-chip",
            "icon": "chevron-down (right)",
            "label": "More",
            "variant": "outline"
          }
        ],
        "right": [
          {
            "type": "button",
            "icon": "upload",
            "label": "Import",
            "variant": "ghost",
            "textColor": "gray.400"
          },
          {
            "type": "button",
            "icon": "download",
            "label": "Export",
            "variant": "ghost",
            "textColor": "gray.400"
          }
        ]
      },

      // Table columns
      "columns": [
        { "key": "select",          "width": "3rem",   "type": "checkbox" },
        { "key": "paymentId",       "label": "Payment ID",      "width": "auto", "fontFamily": "mono", "textColor": "gray.300" },
        { "key": "totalAmount",     "label": "Total Amount",    "width": "auto", "fontWeight": "500" },
        { "key": "to",              "label": "To",              "width": "auto", "hasAvatar": true, "avatarSize": "1.5rem", "avatarShape": "circle" },
