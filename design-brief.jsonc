          "received":  { "bg": "success/15%", "text": "success", "dotColor": "success",  "label": "Received" },
          "failed":    { "bg": "error/15%",   "text": "error",   "dotColor": "error",    "label": "Failed" },
          "processed": { "bg": "warning/15%", "text": "warning", "dotColor": "warning",  "label": "Processed" }
        }
      },

      // Sample rows (from screenshot)
      "sampleData": [
