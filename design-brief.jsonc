        { "paymentId": "TXN-98765A9",  "totalAmount": "$1,072.98 USD", "to": "Guy Hawkins",     "paymentPeriod": "Mar 11 – Mar 12", "paymentMethod": "bankTransfer", "processedDate": "Mar 11", "status": "failed" },
        { "paymentId": "INV-56789LMN", "totalAmount": "$977.98 USD",   "to": "Wade Warren",     "paymentPeriod": "Mar 4 – Mar 8",   "paymentMethod": "wireTransfer", "processedDate": "Mar 7",  "status": "processed" },
        { "paymentId": "ORD-99887PQR", "totalAmount": "$535.98 USD",   "to": "Annette Black",   "paymentPeriod": "Feb 1 – Feb 15",  "paymentMethod": "bankTransfer", "processedDate": "Feb 12", "status": "received" }
      ],

      // Table row style
      "rowStyle": {
